<h1>All Movies</h1>

<table class="table table-striped table-hover table-condensed">
  <tbody>
    <% @movies.each_with_index do |movie, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><img class="thumbnail" src="<%= movie.image_url %>"/></td>
        <td>
          <p><%= link_to(movie.name, "/movies/#{movie.id}") %> <%= "(#{movie.year})" %></p>
          <p><%= "Dir: #{movie.director}" %></p>
          <p><%= movie.genre %></p>
        </td>
      </tr>
    <% end %>
   </tbody
</ol>